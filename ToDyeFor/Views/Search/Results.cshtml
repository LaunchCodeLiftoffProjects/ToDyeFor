<style>
    body {
        background-image: linear-gradient(to right, #2BBF13, #0BAFC9);
    }

    @@media screen and (min-width: 40em) {
        .card {
            max-width: calc(50% - 1em);
        }
    }

    @@media screen and (min-width: 60em) {
        .card {
            max-width: calc(25% - 1em);
        }
    }

    .cards {
        display: flex;
        flex-wrap: wrap;
    }

    .card {
        flex: 1 0 500px;
        box-sizing: border-box;
        margin: 1rem .25em;
    }

    a {
        color: black;
        text-decoration: none; /* no underline */
    }

        a:hover {
            color: black;
            text-decoration: none;
        }
</style>

@if (ViewBag.displayRecipes != null)
{
    <div class="centered">

        <section class="cards">
            @foreach (MXRecipe r in ViewBag.displayRecipes)
            {
                <article class="card" style="background-color:@r.Color">
                    <a href="">
                        <img class="card-img-top" src="" />
                        <h5 class="card-title">@r.Name</h5>
                        <div class="card-body">
                            <span>Last Updated: @r.UpdatedDate</span>
                        </div>
                    </a>
                </article>
            }
        </section>
    </div>
}
