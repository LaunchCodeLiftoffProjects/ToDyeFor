@{
}
@model MXRecipe


<h1>Edit @Model.Name  (id=@Model.Id)</h1>

<form method="post" action="/Recipe/Edit">
    <label for="name">Recipe Name:</label>
    <input name="Name" value="@Model.Name" id="name" type="text" />
    <br />
    <label>
        @*using label in a different way that works the same*@
        Dye Color:
        <input name="dyeColor" value="@Model.DyeColor" id="dyeColor" type="text" />
    </label>
    <br />
    <input type="hidden" value="@Model.Id" name="recipeId" />
    <input type="submit" value="Edit Recipe" />
</form>


