@if (ViewBag.displayRecipes.Count > 0)
{
    <div class="centered">

        <section class="cards">
            @foreach (MXRecipe r in ViewBag.displayRecipes)
            {
                <div class="card" style="background-image: linear-gradient(white, @r.Color)">
                    <a class="nav-link text-dark" asp-controller="Search" asp-action="Detail" asp-route-id="@r.Id">
                        @*<img class="card-img-top" src="" />*@
                        <h5 class="card-title text-center">@r.Name</h5>
                        <div class="card-body">
                            <span>Last Updated: @r.UpdatedDate</span>
                        </div>
                    </a>
                </div>
            }
        </section>
    </div>
}
else
{
    <div class="text-center">
        <p>No results to display for <b><em>@ViewBag.searchInput</em></b>.</p>
    </div>

    <form action="/search/results" method="post">
        <div class="searchBox">
            <input class="searchInput" type="text" name="searchInput" placeholder="">
            <button class="searchButton" href="#">
                <i class="material-icons">
                    search
                </i>
            </button>
        </div>
    </form>
}

